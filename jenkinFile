pipeline{
	agent any
	
	stages{
		stage('Compile Stage'){
			steps{
				withMaven(maven: 'maven3'){
					sh 'mvn clean compile'
				}
			}
		}
	
		stage('Package Stage'){
			steps{
				withMaven(maven: 'maven3'){
					sh 'mvn clean package'
				}
			}
		}
		
		stage('Validate Stage'){
			steps{
				withMaven(maven: 'maven3'){
					sh 'mvn pmd:pmd'
				}
			}
		}
	}

}